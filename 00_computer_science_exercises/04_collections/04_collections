using System;
using System.Linq;
using System.Collections;



class Collections {
    static void Main() { // DO NOT DELETE

    /*
    In C# an collection is known as an ARRAY
    -- EACH ITEM IN THE ARRAY IS AN ELEMENT
    -- NUMBER OF ELEMENTS IN THE ARRAY CANNOT BE CHANGED 
    -- CONTENTS OF EACH ELEMENT CAN CHANGE
    -- ARRAYS ARE ORDERED, MEANING EACH ITEM HAS A FIXED POSSITION 
    -- POSSITION OF THE ELEMENT IS CALLED THE INDEX
    -- FIRST ELEMENT IN INDEX IS 0
    */

    //DECLARING AND DEFINING AN ARRAY
    string[] breakfastFoods = {"Pancake", "Waffle", "Eggs", "Bacon", "Grits"};
    int[] testScore = {100, 99,98,97,96};
    double[] GPA = {0.27D, 4.1D, 3.2D, 2.5, 2.2 };

    //Print Array Contents -- All Elements on Single Line
    Console.WriteLine("The elements of each array are;\n");
    Console.WriteLine("breakfastFoods: \n" + String.Join(", ", breakfastFoods));
    Console.WriteLine();

    //Print Array elements on seperate lines
    Console.WriteLine("The elements of each array are;\n");
    Console.WriteLine("testScore: \n" + String.Join("\n", testScore));
    Console.WriteLine();

    // How long is my Array? determining array length 
    Console.Writeline("The length of the GPA array is: " + GPA.Length);
    // .length is known as a property of the array

    //accu=essing elements in array with the index 
    Console.WriteLine("The first element in breakfastfoods us: " + breakfastfoods[0]); 

    

 }
} 



    
